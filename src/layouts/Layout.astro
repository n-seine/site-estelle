---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-neutral-800 lg:p-6">
    <div
      class="bg-stone-50 min-h-screen flex flex-col items-center md:px-4 lg:px-6 pb-24"
    >
      <Header />
      <main class="w-full">
        <section class="mt-20 mx-auto flex flex-col items-center">
          <slot />
        </section>
      </main>
    </div>
    <div
      id="modal"
      class="fixed top-0 left-0 overflow-visible bg-black/70 h-screen w-screen hidden flex items-center justify-center group transition-all duration-200"
    >
      <a
        class="fixed z-90 top-6 right-8 text-white text-5xl font-bold hover:text-primary"
        href="javascript:void(0)"
        onclick="toggleModal">&times;</a
      >
      <img
        class="h-auto w-full max-w-5xl max-h-[600px] scale-0 transition-all duration-300"
      />
    </div>
  </body>
</html>

