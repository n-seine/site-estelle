---
import ProjectDetails from "../components/storyblok/ProjectDetails.astro";
const { story } = Astro.props;
---

<article
  class="prose prose-lg max-w-7xl prose-neutral prose-p:text-neutral-600 prose-a:no-underline prose-a:text-primary hover:prose-a:underline"
>
  <ProjectDetails
    blok={story.content.details[0]}
    storyTitle={story.name}
    altLayout={true}
    storyName={story.name}
  />
</article>
