---
import { urlForImage } from "../utils/sanityImages";
import { Image } from "astro:assets";
const { asset, alt } = Astro.props.node;

const url = urlForImage(asset).url();
console.log("url", url);
console.log("asset", asset);
console.log("alt", alt);
---

<Image
  src={url}
  widths={[540, 720, 1080]}
  width="1200"
  height="800"
  sizes={"(max-width: 720px) 540px,(max-width: 1024px) 720px, 1080px"}
  alt="{alt}"
  class="w-full h-full object-cover"
/>
